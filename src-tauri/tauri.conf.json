{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deepside",
  "version": "0.1.0",
  "identifier": "com.deepdive.deepside",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "deepside",
        "width": 1200,
        "height": 800
      },
      {
        "label": "map",
        "title": "DeepSide - 3D Network Map",
        "url": "map.html",
        "width": 1000,
        "height": 800,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  }
}